<div class="mb-4">
  <%= form_with(url: blog_posts_path, method: :get, local: true) do %>
    <div class="flex items-center justify-center mb-20 ">
      <%= text_field_tag :search, params[:search], placeholder: "Blog ara...", class: "px-4 py-2 border rounded-l-md" %>
      <%= submit_tag "Ara", class: "bg-blue-500 text-white px-4 py-2 rounded-r-md" %>
    </div>
  <% end %>
</div>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  <% @blog_posts.each do |blog_post| %>
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-xl font-bold"><%= link_to blog_post.title, blog_post %></h2>
      <p><%= truncate(blog_post.body, length: 35) %></p>
      <%= link_to 'Read more', blog_post, class: 'text-blue-500' %>
    </div>
  <% end %>
</div>
